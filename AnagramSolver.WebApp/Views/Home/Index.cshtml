@*Returning anagram list*@
@if (Model != null)
{
    <p><u>Result:</u></p>
    @foreach (var item in Model)
    {
        if (item.Any(x => !char.IsLetter(x)))
        {
            <p>No results!</p>
        }
        else {
            <ul>
                <li>@item</li>
            </ul>
        }
    }
}

